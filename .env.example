# API - Application
API_ENV=development
API_PORT=3000
#API_CORS_ORIGIN=https://example.com
API_WEB_URL=http://localhost:5173

# API - Database
API_DATABASE_HOST=localhost
API_DATABASE_PORT=5432
API_DATABASE_NAME=hayasedb
API_DATABASE_USERNAME=postgres
API_DATABASE_PASSWORD=postgres
API_DATABASE_SYNCHRONIZE=false
API_DATABASE_LOGGING=true

# API - Swagger
API_SWAGGER_ENABLED=true
API_SWAGGER_PATH=docs

# API - Auth (JWT)
API_JWT_SECRET=your-secure-jwt-secret-min-32-chars-for-production
API_JWT_EXPIRES_IN=1h
API_JWT_REFRESH_SECRET=your-secure-refresh-secret-min-32-chars-for-production
API_JWT_REFRESH_EXPIRES_IN=7d

# API - Mail
API_MAIL_PROVIDER=smtp
API_MAIL_FROM_NAME=HayaseDB
API_MAIL_FROM_ADDRESS=noreply@example.com
API_MAIL_VERIFY_CONNECTION=false

# SMTP Provider Settings (when API_MAIL_PROVIDER=smtp)
API_SMTP_HOST=localhost
API_SMTP_PORT=1025
API_SMTP_SECURE=false
API_SMTP_USER=
API_SMTP_PASS=

# Resend Provider Settings (when API_MAIL_PROVIDER=resend)
API_RESEND_API_KEY=

# API - MinIO (Object Storage)
API_MINIO_HOST=localhost
API_MINIO_PORT=9000
API_MINIO_ACCESS_KEY=minioadmin
API_MINIO_SECRET_KEY=minioadmin

