# Server port (default: 3000)
API_PORT=3000

# Environment: development | test | staging | production (default: development)
API_ENV=development

# CORS origin (optional, leave empty to disable)
# API_CORS_ORIGIN=http://localhost:3000

# Enable Swagger documentation (default: true)
API_SWAGGER_ENABLED=true

# Swagger documentation path (default: docs)
API_SWAGGER_PATH=docs

# Database configuration
API_DATABASE_HOST=localhost
API_DATABASE_PORT=5432
API_DATABASE_NAME=hayasedb
API_DATABASE_USERNAME=postgres
API_DATABASE_PASSWORD=postgres

# Synchronize database schema (default: false, use migrations in production)
API_DATABASE_SYNCHRONIZE=false

# Enable database query logging (default: false)
API_DATABASE_LOGGING=false
